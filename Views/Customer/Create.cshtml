@model GCTLInfo_Exam_Project.Models.Customer

<h2>Create New Customer</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>CustomerID</label>
        <input asp-for="CustomerID" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Customer Name</label>
        <input asp-for="CustomerName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Address</label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label>Customer Type</label>
        <select asp-for="CustomerType" asp-items="Html.GetEnumSelectList<CustomerType>()" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Phone</label>
        <input asp-for="Phone" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" type="email" required />
    </div>
    <div class="form-group">
        <label>Credit Limit</label>
        <input asp-for="CreditLimit" class="form-control" type="number" required />
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>

