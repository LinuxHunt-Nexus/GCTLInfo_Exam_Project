@model List<GCTLInfo_Exam_Project.Models.DeliveryInfo>

<h2>Create Delivery Info</h2>
<form asp-action="CreateDeliveryInfo" method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-group">
            <label>Customer</label>
            <select name="DeliveryAddresses[@i].CustomerRefId" class="form-control" required>
                <option value="">Select Customer</option>
                @foreach (var customer in ViewBag.Customers)
                {
                    <option value="@customer.Id">@customer.CustomerName</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label>Delivery Address</label>
            <input name="DeliveryAddresses[@i].DeliveryAddress" class="form-control" value="@Model[i].DeliveryAddress" required />
        </div>

        <div class="form-group">
            <label>Contact Person</label>
            <input name="DeliveryAddresses[@i].ContactPerson" class="form-control" value="@Model[i].ContactPerson" required />
        </div>

        <div class="form-group">
            <label>Phone</label>
            <input name="DeliveryAddresses[@i].Phone" class="form-control" value="@Model[i].Phone" required />
        </div>
    }

    <button type="submit" class="btn btn-success">Save Delivery Info</button>
</form>
