<!-- DataTables CSS -->
<link href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" rel="stylesheet" />

<!-- jQuery (required for DataTables) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- DataTables JS -->
<script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Create Customer </h2>
    </div>
    <div class="col-6 d-flex justify-content-end">
        <a class="btn btn-primary" asp-action="Create"><i class="fas fa-plus"></i> &nbsp; Create New Customer</a>
    </div>
</div>

<table id="customerTable" class="display">
    <thead>
        <tr>
            <th>CustomerID</th>
            <th>Name</th>
            <th>Address</th>
            <th>Bus.Start</th>
            <th>Cus.Type</th>
            <th>Credit Limit</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <!-- Data will be populated here from the server -->
    </tbody>
</table>

<script>
    $(document).ready(function () {
        // Initialize the DataTable
        $('#customerTable').DataTable({
            "ajax": {
                "url": "/Customer/GetAll",
                "type": "GET",
                "dataSrc": function (json) {
                    console.log("API Response:", json);
                    return json.data;
                }
            },
            "columns": [
                { "data": "customerID" },
                { "data": "customerName" },
                { "data": "address" },
                { "data": "businessStartDate" },
                { "data": "customerType" },
                { "data": "creditLimit" },
                {
                    "data": "id",
                    "render": function (data) {
                        return `<a href="/Customer/Edit/${data}" class="btn btn-warning">Edit</a>
                                             <button class="btn btn-danger" onclick="deleteCustomer('${data}')">Delete</button>`;
                    }
                }
            ]
        });
    });

    function deleteCustomer(id) {
        if (confirm("Are you sure you want to delete this record?")) {
            fetch(`/Customer/Delete/${id}`, {  // সঠিক URL ব্যবহার করা হলো
                method: "DELETE",
                headers: {
                    "Content-Type": "application/json"
                }
            })
                .then(response => {
                    if (response.ok) {
                        alert("Deleted successfully!");
                        $('#customerTable').DataTable().ajax.reload();
                    } else {
                        alert("Failed to delete!");
                    }
                })
                .catch(error => console.error("Error:", error));
        }
    }
</script>

